<mvc:View 
	controllerName="EuroCareDoctor.controller.PatientList"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="EuroCare Patient List"
				class="title-enhanced"
				showNavButton="true"
		        navButtonPress="handleNavButtonPress">
				<content>
					<l:VerticalLayout
						width="100%" >
						<l:content>
							<Panel>
								<headerToolbar>
									<Toolbar>
										<Title level="H2" class="ne-title" text="Under Observation" />
									</Toolbar>
								</headerToolbar>
								<FlexBox
									class="ne-flexbox2"
									width="95%"
									justifyContent="SpaceBetween"
									alignItems="Center"	>
									<items>
										<l:VerticalLayout>
											<Image
												press="handlePerson_4Pressed"
												class="circular--square alert tile_card"
												width="200px"
												height="200px"
												src="/webapp/img/people/irene.jpg"/>
											<Text 
												text="Name:{Patient>Name}"
												textAlign="Center"/>
											<Text 
												text="Idade:{Patient>Age}"
												textAlign="Center"/>
										</l:VerticalLayout>
									</items>
								</FlexBox>
							</Panel>   
							<Panel>
								<headerToolbar>
									<Toolbar>
										<Title level="H2" class="ne-title" text="Stable" />
									</Toolbar>
								</headerToolbar>
								<FlexBox
									class="ne-flexbox2"
									width="95%"
									justifyContent="SpaceBetween"
									alignItems="Center">
									<items>
										<l:VerticalLayout>
											<Image
												class="circular--square tile_card"
												width="170px"
												height="170px"
												src="/webapp/img/people/person_1.jpg"/>
											<Text 
												text="Name:{Patient>name}"
												textAlign="Center"/>
											<Text 
												text="Idade:"
												textAlign="Center"/>
										</l:VerticalLayout>
										
										<!-- TO BE DELETED WHEN AUTOMATICALLY added-->
										<l:VerticalLayout>
											<Image
												class="circular--square tile_card"
												width="170px"
												height="170px"
												src="/webapp/img/people/person_2.jpg"/>
											<Text 
												text="Name:{Patient>name}"
												textAlign="Center"/>
											<Text 
												text="Idade:"
												textAlign="Center"/>
										</l:VerticalLayout>
										<l:VerticalLayout>
											<Image
												class="circular--square tile_card"
												width="170px"
												height="170px"
												src="/webapp/img/people/person_3.jpg"/>	
											<Text 
												text="Name:"
												textAlign="Center"/>
											<Text 
												text="Idade:"
												textAlign="Center"/>
										</l:VerticalLayout>
										<l:VerticalLayout>
											<Image
												class="circular--square tile_card"
												width="170px"
												height="170px"
												src="/webapp/img/people/person_4.jpg"/>
											<Text 
												text="Name:"
												textAlign="Center"/>
											<Text 
												text="Idade:"
												textAlign="Center"/>
										</l:VerticalLayout>
											
									</items>
								</FlexBox>
							</Panel>     
						</l:content>
					</l:VerticalLayout>
				</content>
				<footer>
				    <OverflowToolbar>
				        <ToolbarSpacer/>
				        <Image
            		    	visible="true"
            		    	width="80px"
            		    	height="40px"
            		    	src="/webapp/img/SAP_2011_logo.svg"/>
				    </OverflowToolbar>
        		</footer>
			</Page>
		</pages>
	</App>
</mvc:View>