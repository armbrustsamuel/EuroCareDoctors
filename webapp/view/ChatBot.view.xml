<mvc:View 
	controllerName="EuroCareDoctor.controller.ChatBot"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="ChatBot"
		        showNavButton="true"
		        navButtonPress="handleNavButtonPress">
				<content>
					<l:VerticalLayout
						class="navigationExamples"
						width="100%" >
						<l:content>
							<Panel>
								<headerToolbar>
									<Toolbar>
										<Title level="H2" class="ne-title" text="Open Questions" />
									</Toolbar>
								</headerToolbar>
								<!--<Button press="handleQuestionPressed" />-->
								<FlexBox
									width="95%"
									justifyContent="SpaceBetween"
									alignItems="Center"	
									items="{Feed>/feedList}"
									wrap="Wrap">
									<l:VerticalLayout visible="{= ${Feed>done} === false ? true : false}">
										<!--<Panel>-->
										<!--	<Text id="questionText" text="{Feed>message}"/>-->
										<!--</Panel>-->
										<!--<FeedInput-->
										<!--	enabled="false"-->
										<!--	icon="/webapp/img/people/person_{Feed>userId}.jpg"-->
										<!--	showIcon="true"-->
										<!--	value="{Feed>message}"/>-->
										<FeedListItem
											sender="Question"
											icon="/webapp/img/people/person_{Feed>userId}.jpg"
											iconPress="onPress"
											iconDensityAware="false"
											text="{Feed>message}"
											convertLinksToAnchorTags="All" />
										<FeedInput
											placeholder="Post something here"
											icon="/webapp/img/people/doctor_1.jpg"
											showIcon="true"
											post="handlePostPressed"/>
									</l:VerticalLayout>
								</FlexBox>
							</Panel>
							
							<Panel>
								<headerToolbar>
									<Toolbar>
										<Title level="H2" class="ne-title" text="Answered Questions" />
									</Toolbar>
								</headerToolbar>
								<List
									items="{Feed>/feedList}" >
									<FeedListItem
										visible="{= ${Feed>done} === true ? true : false}"
										sender="{Feed>userId}"
										icon="/webapp/img/people/person_{Feed>userId}.jpg"
										senderPress="onPress"
										iconPress="onPress"
										iconDensityAware="false"
										info="Answered"
										timestamp=""
										text="{Feed>message}"
										convertLinksToAnchorTags="All" />
								</List>
								<!--<FlexBox-->
								<!--	class="ne-flexbox1"-->
								<!--	width="95%"-->
								<!--	renderType="List"-->
								<!--	justifyContent="SpaceBetween"-->
								<!--	alignItems="Center"-->
								<!--	items="{Feed>/feedList}">-->
								<!--	<items>-->
								<!--		<core:HTML visible="{= ${Feed>done} === true ? true : false}"-->
								<!--			content="&lt;a href='javascript:return false;'&gt;{Feed>message}&lt;/a&gt;">-->
								<!--			<core:layoutData>-->
								<!--				<FlexItemData growFactor="1" />-->
								<!--			</core:layoutData>-->
								<!--		</core:HTML>-->
								<!--	</items>-->
								<!--</FlexBox>-->
							</Panel>
						</l:content>
					</l:VerticalLayout>
				</content>
				<footer>
				    <OverflowToolbar>
				        <ToolbarSpacer/>
				        <Image
            		    	visible="true"
            		    	width="80px"
            		    	height="40px"
            		    	src="/webapp/img/eurofarma_logo.png"/>
				    </OverflowToolbar>
        		</footer>
			</Page>
		</pages>
	</App>
</mvc:View>